{% extends "base.html.twig" %}

{% block body %}
<h1>Control Panel</h1>
	<!-- main -->
	<div class="main">
		<!--login-profile-->
		<!--login-profile-->
		<!--signin-form-->
		<div class="w3">
			<div class="signin-form profile">
				<h3>Login</h3>
				
				<div class="login-form">
					<form action="/login" method="post">
						<input type="text" name="agent_name" placeholder="User" required="">
						<input type="password" name="password" placeholder="Password" required="">
						<div class="tp">
							<input type="submit" value="LOGIN NOW">
						</div>
					</form>
				</div>
				<p style='color: white;'> I hope you enjoy this game, fellow player</p>
			</div>
		</div>
		<div class="agile">
			<div class="signin-form profile">
				<h3>Register</h3>
				
				<div class="login-form">
					<form action="/insert" method="post">
						<input type="text" name="agent_name" placeholder="Username" required="">
						<input type="password" name="password" placeholder="Password" required="">
                        <input type="text" name="faction" placeholder="Faction" required="">
						{# <input type="password" name="password" placeholder="Confirm Password" required=""> #}
						<input type="submit" value="REGISTER">
					</form>
				</div>
				<p style='color: white;'> By clicking register, I agree to your terms</p>
			</div>
		</div>
		<div class="clear"></div>
			
	</div>
	
	<div class="copyright">
